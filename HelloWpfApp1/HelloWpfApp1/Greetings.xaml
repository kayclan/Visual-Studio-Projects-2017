<Window x:Class="HelloWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp1"
        mc:Ignorable="d"
        Title="Greetings" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Width="448"/>
        <RadioButton x:Name="radioButton1" Content="Hello" HorizontalAlignment="Left" Height="18" Margin="20,45,0,0" VerticalAlignment="Top" Width="108"/>
        <RadioButton x:Name="radioButton2" Content="Goodbye" HorizontalAlignment="Left" Height="18" Margin="225,45,0,0" VerticalAlignment="Top" Width="102" Checked="radioButton2_Checked"/>
        <Button x:Name="button" Content="Display" HorizontalAlignment="Left" Height="24" Margin="104,87,0,0" VerticalAlignment="Top" Width="118" Click="button_Click"/>

    </Grid>
</Window>
